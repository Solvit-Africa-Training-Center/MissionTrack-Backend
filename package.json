{
  "name": "mission-management",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "ecommerce"
  ],
  "homepage": "https://github.com/ikundabayoplacide/SolvitAfrica-mission-management#readme",
  "bugs": {
    "url": "https://github.com/ikundabayoplacide/SolvitAfrica-mission-management/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ikundabayoplacide/SolvitAfrica-mission-management.git"
  },
  "license": "ISC",
  "author": "",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:migrate": "sequelize-cli db:migrate",
    "db:migrate:undo": "sequelize-cli db:migrate:undo",
    "db:migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "db:seed": "sequelize-cli db:seed:all",
    "db:seed:undo": "sequelize-cli db:seed:undo:all",
    "migration:create": "sequelize-cli migration:generate --name",
    "migration:run": "npx sequelize-cli db:migrate",
    "seed:create": "sequelize-cli seed:generate --name",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "format": "prettier --write .",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "coverage": "nyc npm test",
    "coverage:report": "nyc report --reporter=text-lcov > coverage.lcov",
    "coverage:html": "nyc report --reporter=html",
    "codeclimate": "nyc npm test && nyc report --reporter=text-lcov | codeclimate-test-reporter"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/cookie-parser": "^1.4.9",
    "@types/express": "^5.0.3",
    "@types/i18n": "^0.13.12",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.2.0",
    "@types/redis": "^4.0.10",
    "@types/sequelize": "^4.28.20",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "babel-register": "^6.26.0",
    "codeclimate-test-reporter": "^0.5.1",
    "dotenv": "^17.2.1",
    "eslint": "^9.32.0",
    "globals": "^16.3.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "jiti": "^2.5.1",
    "multer": "^2.0.2",
    "nyc": "^17.1.0",
    "prettier": "3.6.2",
    "sequelize-cli": "^6.6.3",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.39.0"
  },
  "dependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/csurf": "^1.11.5",
    "@types/jsonwebtoken": "^9.0.10",
    "bcrypt": "^6.0.0",
    "cloudinary": "^2.7.0",
    "cookie-parser": "^1.4.7",
    "csurf": "^1.2.2",
    "express": "^5.1.0",
    "express-http-proxy": "^2.1.1",
    "express-rate-limit": "8.0.1",
    "i18n": "^0.15.1",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^4.7.1",
    "sequelize": "^6.37.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.1.0",
    "uuidv4": "^6.2.13",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/**/*.d.ts",
      "src/**/__tests__/**",
      "src/**/__mocks__/**",
      "src/index.ts",
      "src/config/config.ts"
    ],
    "reporter": [
      "text",
      "html",
      "lcov"
    ],
    "exclude-after-remap": false
  }
}
